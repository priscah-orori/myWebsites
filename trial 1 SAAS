import React, { useState, useEffect } from "react";

const App = () => {
  const [activeSection, setActiveSection] = useState("home");
  const [isMenuOpen, setIsMenuOpen] = useState(false);

  useEffect(() => {
    const handleScroll = () => {
      const sections = ["home", "features", "how-it-works", "testimonials", "contact"];
      const scrollPosition = window.scrollY + 100;

      for (const section of sections) {
        const element = document.getElementById(section);
        if (element) {
          const { offsetTop, offsetHeight } = element;
          if (scrollPosition >= offsetTop && scrollPosition < offsetTop + offsetHeight) {
            setActiveSection(section);
            break;
          }
        }
      }
    };

    window.addEventListener("scroll", handleScroll);
    return () => window.removeEventListener("scroll", handleScroll);
  }, []);

  const scrollToSection = (sectionId) => {
    const element = document.getElementById(sectionId);
    if (element) {
      window.scrollTo({
        top: element.offsetTop - 80,
        behavior: "smooth",
      });
    }
    setIsMenuOpen(false);
  };

  const features = [
    {
      icon: "Phone",
      title: "24/7 AI Callers",
      description: "Never miss a lead again. Our AI agents answer calls instantly, qualify prospects, and book appointments while you sleep.",
      benefit: "AI callers never sleep and can book 80% more leads for businesses like yours"
    },
    {
      icon: "Megaphone",
      title: "Smart Marketing",
      description: "Automated ad campaigns and content that convert. AI analyzes what works and optimizes your marketing in real-time.",
      benefit: "Grow your customer base without spending more on ads"
    },
    {
      icon: "Headphones",
      title: "Instant Support",
      description: "AI-powered chat and voice support handles FAQs, bookings, and service requests 24/7 with human-like understanding.",
      benefit: "Reduce response time from hours to seconds and keep customers happy"
    }
  ];

